{{!< default}}

<div class="gh-page">
    <div class="gh-container">
        <header class="gh-page-head">
            <h1 class="gh-page-title">All Posts</h1>
        </header>

        <div class="gh-postfeed-archive">
            {{#get "posts" limit="all" include="authors,tags"}}
                {{#foreach posts}}
                    {{> "card"}}
                {{/foreach}}
            {{else}}
                <p>No posts found.</p>
            {{/get}}
        </div>
    </div>
</div>
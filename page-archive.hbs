{{!< default}}

<div class="gh-page">
    <div class="gh-container">
        <header class="gh-page-head">
            <h1 class="gh-page-title">All Posts</h1>
        </header>

        {{> "filters"}}

        <div class="gh-postfeed-archive" id="postsContainer">
            {{#get "posts" limit="all" include="authors,tags" as |posts|}}
                {{#foreach posts}}
                    {{> "card"}}
                {{/foreach}}
                {{#if posts}}
                    <div class="gh-no-results" style="display: none;">
                        <p>No posts found matching your filters.</p>
                    </div>
                {{else}}
                    <div class="gh-no-results">
                        <p>No posts found.</p>
                    </div>
                {{/if}}
            {{/get}}
        </div>

        {{#if @site.members_enabled}}
            {{^if @member}}
            <div class="gh-subscribe-section" style="text-align: center; margin: 4rem 0;">
                <a class="gh-button" href="{{@site.signup_url}}" style="background: #800020; color: #fff; padding: 12px 30px; border-radius: 30px; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; justify-content: center; line-height: 1; height: auto; min-width: 150px; border: none; box-shadow: none;">Subscribe</a>
            </div>
            {{/if}}
        {{/if}}
    </div>
</div>
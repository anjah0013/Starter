{{!< default}}

{{!-- Blog Title Section --}}
{{#match @custom.blog_title_position "Below navigation"}}
<section class="gh-blog-title-section">
    <div class="gh-container">
        <a class="gh-blog-title" href="{{@site.url}}">
            {{#if @site.logo}}
                <img src="{{@site.logo}}" alt="{{@site.title}}" />
            {{else}}
                {{@site.title}}
            {{/if}}
        </a>
    </div>
</section>
{{/match}}

{{!-- Hero Section with Featured Posts Slider --}}
{{> "hero"}}

<div class="gh-page">
    <div class="gh-container">
        <div class="gh-latest-posts-header">
            <h2 class="gh-latest-posts-title">Latest Posts</h2>
        </div>

        <div id="posts" class="gh-postfeed">
        {{#get "posts" limit="6" include="authors,tags"}}
            {{#foreach posts}}
                {{> "card"}}
            {{/foreach}}
        {{/get}}
        </div>

        <div class="gh-more-posts-container">
            <a href="/archive/" class="gh-more-posts-button">More Posts â†’</a>
        </div>

        {{#if @site.members_enabled}}
            {{^if @member}}
            <div class="gh-subscribe-section" style="text-align: center; margin: 4rem 0;">
                <a class="gh-button" href="{{@site.signup_url}}" style="background: var(--gh-accent-color); color: #fff; padding: 12px 30px; border-radius: 30px; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; justify-content: center; line-height: 1; height: auto; min-width: 150px; border: none; box-shadow: none;">Subscribe</a>
            </div>
            {{/if}}
        {{/if}}

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>

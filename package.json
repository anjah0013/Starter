{
    "name": "ghost-starter-theme",
    "description": "A starter theme for Ghost theme development",
    "demo": "https://starter.ghost.io",
    "version": "1.1.3",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "rollup -c --environment BUILD:development -w",
        "build": "rollup -c --environment BUILD:production",
        "zip": "npm run build && bestzip $npm_package_name.zip assets/* partials/* members/* *.hbs package.json",
        "test": "npx gscan .",
        "pretest": "npm run build"
    },
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/TryGhost/Starter.git"
    },
    "bugs": "https://github.com/TryGhost/Starter/issues",
    "contributors": "https://github.com/TryGhost/Starter/graphs/contributors",
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@babel/preset-env": "^7.20.2",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@rollup/plugin-terser": "^0.4.0",
        "bestzip": "^2.2.1",
        "postcss": "^8.4.24",
        "postcss-import": "^16.0.0",
        "postcss-preset-env": "^10.0.0",
        "rollup": "^4.0.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-postcss": "^4.0.2"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "custom": {
            "typography": {
                "type": "select",
                "options": [
                    "Serif",
                    "Sans-serif"
                ],
                "default": "Serif"
            },
            "body_font_size": {
                "type": "select",
                "options": [
                    "Small",
                    "Standard",
                    "Large"
                ],
                "default": "Standard"
            },
            "background_color_start": {
                "type": "color",
                "default": "#fffef9"
            },
            "background_color_end": {
                "type": "color",
                "default": "#fff5dc"
            },
            "header_color": {
                "type": "color",
                "default": "#ffe4ec"
            },
            "blog_title_position": {
                "type": "select",
                "options": [
                    "Below navigation",
                    "Inside navigation"
                ],
                "default": "Below navigation"
            },
            "hero_height": {
                "type": "select",
                "options": [
                    "Full",
                    "Compact"
                ],
                "default": "Full"
            },
            "show_hero_excerpt": {
                "type": "boolean",
                "default": true
            },
            "post_image_size": {
                "type": "select",
                "options": [
                    "Small",
                    "Standard",
                    "Large"
                ],
                "default": "Standard"
            },
            "post_image_aspect_ratio": {
                "type": "select",
                "options": [
                    "1/1",
                    "4/3",
                    "3/2",
                    "16/9"
                ],
                "default": "4/3"
            },
            "single_post_image_width": {
                "type": "select",
                "options": [
                    "Standard",
                    "Wide",
                    "Full",
                    "Narrow"
                ],
                "default": "Standard"
            },
            "single_post_image_aspect_ratio": {
                "type": "select",
                "options": [
                    "Original",
                    "16/9",
                    "21/9",
                    "4/3",
                    "2/1"
                ],
                "default": "Original"
            },
            "show_post_authors": {
                "type": "boolean",
                "default": true
            },
            "show_post_tags": {
                "type": "boolean",
                "default": true
            },
            "show_related_posts": {
                "type": "boolean",
                "default": true
            },
            "about_image": {
                "type": "image"
            },
            "about_image_size": {
                "type": "select",
                "options": [
                    "Small",
                    "Standard",
                    "Large"
                ],
                "default": "Standard"
            },
            "about_page_text_split": {
                "type": "select",
                "options": [
                    "Mostly left",
                    "More left",
                    "Balanced",
                    "More right",
                    "Mostly right"
                ],
                "default": "Balanced"
            },
            "social_twitter": {
                "type": "text",
                "default": ""
            },
            "social_facebook": {
                "type": "text",
                "default": ""
            },
            "social_instagram": {
                "type": "text",
                "default": ""
            },
            "social_youtube": {
                "type": "text",
                "default": ""
            },
            "social_pinterest": {
                "type": "text",
                "default": ""
            },
            "social_tiktok": {
                "type": "text",
                "default": ""
            },
            "social_linkedin": {
                "type": "text",
                "default": ""
            },
            "social_telegram": {
                "type": "text",
                "default": ""
            },
            "social_whatsapp": {
                "type": "text",
                "default": ""
            },
            "social_threads": {
                "type": "text",
                "default": ""
            }
        },
        "card_assets": true,
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "type": "module"
}
